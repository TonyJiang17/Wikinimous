<ul class="list-unstyled" id="articles">
  <% @articles.each do |article| %>
    <li>
      <h2><%= link_to article.title, article_path(article.id)%>
      </h2>
      <p>
      <%= truncate(article.content, :length => 80) %>
      </p>
    </li>
  <% end %>
</ul>

<hr>

<%= link_to new_article_path do %>
  <i class="fa fa-plus"></i> Add a new article
<% end %>